{
  "name": "@markbook/desktop",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:renderer\" \"bun run dev:electron\"",
    "dev:renderer": "vite --host 127.0.0.1 --port 5173",
    "dev:electron": "wait-on http://127.0.0.1:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "build": "bun run build:renderer && bun run build:electron",
    "build:renderer": "vite build",
    "build:electron": "electron-builder --dir",
    "pack": "bun run build:renderer && electron-builder"
  },
  "dependencies": {
    "@markbook/core": "workspace:*",
    "@markbook/schema": "workspace:*",
    "@markbook/reports": "workspace:*",
    "@glideapps/glide-data-grid": "^6.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.15",
    "typescript": "^5.6.3",
    "vite": "^6.0.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.markbook.classic",
    "productName": "MarkBook Classic",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**",
      "electron/**",
      "resources/**"
    ],
    "extraResources": [
      {
        "from": "resources/markbookd",
        "to": "markbookd"
      }
    ],
    "mac": {
      "category": "public.app-category.education"
    }
  }
}
